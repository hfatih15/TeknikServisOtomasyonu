                            <dt>Müşteri Yorumu:</dt>
                            <dd>
                                <p>
                                    @*@Model.MusteriYorumu*@
                                </p> <hr />
                            </dd>
                            <dt>Şehir: @*@Model.SehirAdi*@</dt>   <hr />
                            <dt>Adres: @*@Model.Adres*@</dt> <hr />
                            
