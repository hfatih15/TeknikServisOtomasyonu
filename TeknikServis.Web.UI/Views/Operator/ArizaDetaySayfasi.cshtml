<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <hr />

    @using (Html.BeginForm("ArizaDetaySayfasi", "Operator", FormMethod.Post, new { id = "contactFrm", name = "contactFrm", @class = "fieldset", enctype = "multipart/form-data" }))
