                        </dl>
                       
                        <hr>
                        <div class="row">
                            <div class="col-sm-5">
                                <dl class="param param-inline">
                                    <dt>Atanacak Teknisyen</dt>
                                    <dd>
                                        <select class="form-control form-control-sm" style="width:70px;">
                                            @*@Model.TeknisyenId*@
                                        </select>
                                    </dd>
                                </dl>  <!-- item-property .// -->
                            </div> <!-- col.// -->
                            <div class="col-sm-7">

                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                        <hr>
                        <button type="submit" class="btn btn-lg btn-primary text-uppercase">Seçili Teknisyeni Ata</button>
                        @*<a href="#" class="btn btn-lg btn-primary text-uppercase"> Buy now </a>*@

                    </article> <!-- card-body.// -->
                </aside> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
      }

