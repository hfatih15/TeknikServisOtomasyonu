@model TeknikServis.Models.ViewModels.ArizaViewModel
@using TeknikServis.BLL.Identity
@{
    ViewBag.Title = "ArizaDetaySayfasi";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/vendor/css/ArizaDetay.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <hr />

   

        <div class="card">
            <div class="row">
                <aside class="col-sm-5 border-right">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="@Model.UrunResmi"><img src="@Model.UrunResmi"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="img-small-wrap">
                            <div class="item-gallery"><a href="@Model.FaturaResmi"> <img src="@Model.FaturaResmi"></a> </div>
                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <aside class="col-sm-7">
                    <article class="card-body p-5">
                        <h2 class="title mb-3" style="padding-bottom:40px;">Arıza Detay Sayfası</h2>

                        <dl class="item-property">
                            <b>Müşteri Adı Soyadı:</b> @MemberShipTools.GetNameSurname(null)
                            <hr />

                            <b>Ürün Tipi :</b>@Model.UrunTipi
                            <hr />

                            <b>Ürün Adı:</b>  @Model.UrunAdi
                            <hr />
                            <b> Müşteri Yorumu:</b> @Model.MusteriYorumu

                            <hr />

                            <b>Şehir:</b>@Model.SehirAdi
                            <hr />
                            <b>Adres:</b>  @Model.Adres</dt>
                            <hr />

                            <dt>Garanti Durumu : @Html.CheckBox("Garanti Durumu", Model.GarantiDurumu, new { disabled = "true" })  </dt>
                        </dl>

                        <hr>
                        <div class="row">
                            <div class="col-sm-5">
                                <dl class="param param-inline">
                                   

                                        <dt>Atanacak Teknisyen</dt>
                                        
                                        <dd>
                                            @using (Html.BeginForm("TeknisyenAtama", "Operator", FormMethod.Post, new { id = "contactFrm", name = "contactFrm", @class = "fieldset", enctype = "multipart/form-data" }))
                                            {

                                                @Html.HiddenFor(x => x.ArizaId);
                                                @Html.DropDownListFor(x => x.TeknisyenId, (List<SelectListItem>)ViewBag.TeknisyenK, new { @class = "form-control", size = "1" , style="margin-top:18px"})

                                            <button type="submit" class="btn btn-lg btn-primary text-uppercase" style="margin-top:50px; ">Seçili Teknisyeni Ata</button>
                                            }
                                                @*<select class="form-control form-control-sm" style="width:70px;">
                                                   @Model.TeknisyenId
                                               </select>*@
                                        </dd>
                                </dl>  <!-- item-property .// -->
                            </div> <!-- col.// -->
                            <div class="col-sm-7">

                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                        <hr>
                       
                        
                        @*<a href="#" class="btn btn-lg btn-primary text-uppercase"> Buy now </a>*@

                    </article> <!-- card-body.// -->
                </aside> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->

    
    @using (Html.BeginForm("OperatorAtama", "Operator", FormMethod.Post, new { id = "contactFrm", name = "contactFrm", @class = "fieldset", enctype = "multipart/form-data" }))
        { 
        @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.ArizaId);
        <button type="submit" class="btn btn-lg btn-primary text-uppercase" style="margin-top:25px;">Arızayı Üstlen</button>
    }


</div>
<!--container.//-->

